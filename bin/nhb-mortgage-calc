#!/usr/bin/env sh

: "${NHBCMD:="$(dirname "$0")/../nhb-assessment"}"
: "${EDITOR:=vi}"
TMPFILE="$(mktemp -t XXXXX_maximum_by_income.ini)"

"$NHBCMD" init "$TMPFILE" || exit 1

while
    $EDITOR "$TMPFILE"
    ! res=$("$NHBCMD" run "$TMPFILE")
do true; done

echo "" 1>&2
echo "Maximale Hypotheek:   â‚¬ $res" 1>&2
echo "" 1>&2
echo "$res"

rm "$TMPFILE"
