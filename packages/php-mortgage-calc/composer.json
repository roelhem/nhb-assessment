{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "roelhem/php-mortgage-calc",
    "type": "project",
    "version": "0.0.1",
    "require": {
        "php": "^8.4",
        "ext-bcmath": "*",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.3"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Roelhem\\NhbTechAssessment\\PhpMortgageCalc\\": "src/"
        },
        "files": ["src/utils.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Roelhem\\NhbTechAssessment\\PhpMortgageCalc\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "roelhem/*": true
        }
    }
}
